<%= search_form_for @q do |f| %>

  <!-- # Search if the name field contains... -->
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>
<input type="submit" name="commit" value="Search" data-disable-with="Search" class="btn btn-primary">
<% end %>
<h1>ホテル一覧</h1>
<% @hotels.each do |hotel| %>
  <p><%= hotel.name %></p>
  <p><%= hotel.description %></p>
  <p><%= image_tag(hotel.picture_url, width: 600) if hotel.picture.present? %><p>
<% end %>
